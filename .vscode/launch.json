{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run OS with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/kernel.elf",
            "cwd": "${workspaceFolder}",
            "args": [],
            "targetArchitecture": "x86",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "",
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234",
                    "description": "Connect to QEMU remote debugger"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Load debugging symbols",
                    "text": "symbol-file ${workspaceFolder}/build/kernel.elf",
                    "ignoreFailures": false
                },
                // {
                //     "description": "Load stage2 debugging symbols",
                //     "text": "symbol-file ${workspaceFolder}/build/stage2_debug.elf",
                //     "ignoreFailures": false
                // },
            ],
            "preLaunchTask": "Run (QEMU)"
        }
    ]
}