{
    "files.problemExclude": [
        "src/bootloader/stage1/main.asm",
        "src/bootloader/stage2/entry.asm",
    ],
    "makefile.configureOnOpen": false,
    "files.associations": {
        "*.json": "jsonc",
        "limits": "c",
        "stdbool.h": "c",
        "stddef.h": "c",
        "__stddef_null.h": "c",
        "stdint.h": "c",
        "executor": "c",
        "functional": "c",
        "*.inc": "c",
        "internet": "c",
        "typeindex": "c",
        "typeinfo": "c",
        "cpuid.h": "c",
        "memdetect.h": "c",
        "cstdint": "c",
        "compare": "c",
        "ranges": "c",
        "stdio.h": "c",
        "nondeduced6.C": "cpp",
        "gdt.h": "c",
        "regex": "c",
        "v86_monitor.h": "c",
        "test.h": "c",
        "bootstructs.h": "c",
        "string": "c",
        "format": "c",
        "coroutine": "c",
        "memory.h": "c"
    },

    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": false,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "#E41717",
            "backgroundColor": "rgba(0, 0, 0, 0)",
            "overviewRulerColor": "rgba(255,189,42,0.8)"
        },
        {
            "text": "FIXME:",
            "color": "#E41717",
            "backgroundColor": "rgba(0, 0, 0, 0)",
            "overviewRulerColor": "rgba(240,98,146,0.8)"
        },
        {
            "text": "NOTE:",
            "color": "#1BB73A",
            "backgroundColor": "rgba(0, 0, 0, 0)"
        },
        {
            "text": "WARNING:",
            "color": "#f36709",
            "backgroundColor": "rgba(0, 0, 0, 0)"
        }
    ],
    "todohighlight.include": [
        "**/*.c",
        "**/*.h",
        "**/*.asm",
        "**/*.ld",
        "**/*.sh",
        "**/*.txt",
        "**/*.md"
    ],
    "clangd.arguments": [
        "-header-insertion=never"
    ],

    "C_Cpp.default.cppStandard": "c++98",
    "C_Cpp.default.cStandard": "c99",
}