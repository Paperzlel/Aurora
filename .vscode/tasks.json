{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Operating System",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Kernel Information",
            "type": "shell",
            "command": "make install",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build Toolchain",
            "type": "shell",
            "command": "make toolchain",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Operating System",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Toolchain",
            "type": "shell",
            "command": "make clean_toolchain",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Toolchain (All)",
            "type": "shell",
            "command": "make clean_toolchain_all",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run (QEMU)",
            "type": "shell",
            "command": "qemu-system-i386 -S -gdb tcp::1234 -fda build/main_floppy.img -daemonize",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run (bochs)",
            "type": "shell",
            "command": "bochs -q -dbg -f bochs_config",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}